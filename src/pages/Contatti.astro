---
import Layout from "../layout/Layout.astro";
import Button from "../component/Button.astro";
---

<Layout title="title" description="description">
  <section class="px-body pt-[16.25vw] flex flex-col gap-[10.417vw]">
    <div class="flex flex-col">
      <div class="flex flex-row justify-between">
        <h1 class="text-nero">
          Hai una domanda?<br />
          Vuoi <span class="text-blu">collaborare</span> con noi?
        </h1>
        <div class="animazione-contatti-container h-[22.222vw] w-[22.569vw] relative">
          <div class="animazione-contatti blue-circle h-[10.417vw] w-[10.417vw] rounded-full bg-blu absolute"></div>
          <div class="animazione-contatti green-circle h-[10.417vw] w-[10.417vw] rounded-full border border-blu absolute"></div>
        </div>
      </div>
      <div class="flex flex-row gap-[10.417vw]">
        <div class="flex flex-col gap-[0.556vw] w-[22.569vw]">
          <h5 class="text-grigio-200">Sede</h5>
          <h3 class="text-nero">
            Via Romana Ovest 310<br />
            55016 Porcari (LU)
          </h3>
        </div>
        <div class="flex flex-col gap-[0.556vw]">
          <h5 class="text-grigio-200">Contatti</h5>
          <h3 class="text-nero">+39 0583 429652</h3>
          <h3 class="text-nero">info@celyon.it</h3>
        </div>
      </div>
    </div>
    <div class="flex flex-row justify-between">
      <div class="flex flex-col gap-[1.667vw]">
        <h4 class="text-nero">Contatta Celyon</h4>
        <p class="text-nero">Per informazioni, preventivi e richieste di consulenza: ti ricontatteremo nel più breve tempo possibile.</p>
      </div>
      <form action="invioEffettuato" method="POST" id="form" class="w-full">
        <div class="flex flex-col lg:gap-[2.222vw]">
          <div class="flex flex-col lg:flex-row lg:gap-[10.417vw]">
            <div class="lg:w-1/2 relative">
              <input type="text" name="name" placeholder=" " required />
              <label for="name" class="text-grigio-200">Nome</label>
            </div>
            <div class="lg:w-1/2 relative">
              <input type="text" name="surname" placeholder=" " required />
              <label for="surname" class="text-grigio-200">Cognome</label>
            </div>
          </div>
          <div class="flex flex-col lg:flex-row lg:gap-[10.417vw]">
            <div class="lg:w-1/2 relative">
              <input type="email" name="email" placeholder=" " required />
              <label for="email" class="text-grigio-200">Email</label>
            </div>
            <div class="lg:w-1/2 relative">
              <input type="number" name="phoneNumber" placeholder=" " required />
              <label for="phoneNumber" class="text-grigio-200">Telefono</label>
            </div>
          </div>
          <div class="flex flex-col lg:flex-row lg:gap-[10.417vw]">
            <div class="w-full relative">
              <input type="text" name="message" placeholder=" " required />
              <label for="message" class="text-grigio-200">Messaggio</label>
            </div>
          </div>
          <div class="flex flex-row items-center lg:gap-[0.833vw] gap-[16px]">
            <input type="checkbox" name="privacy" id="privacy" required />
            <p class="text-grigio-200 !opacity-100 !top-0 !translate-x-0 lg:text-[0.83vw] text-[16px]">
              Acconsento al trattamento dei dati personali come specificato nella
              <a href="https://www.iubenda.com/privacy-policy/35285413" class="font-[600] z-[20] text-blu">Privacy Policy</a>
            </p>
          </div>

          <div class="flex flex-col lg:flex-row items-start">
            <button class="btn-gen btn-blu">
              <p class="btn-title">
                <span class="text">Invia richiesta</span>
                <span class="hover-text">Invia richiesta</span>
              </p>
            </button>
          </div>
        </div>
      </form>
    </div>
    <div class="pb-body">
      <div class="bg-grigio-100 p-[2.5vw] flex flex-col gap-[4.962vw]">
        <div class="flex flex-row justify-between items-end">
          <h2 class="text-nero">
            Diventa partner<br />
            o agente
          </h2>
          <p class="text-nero w-[20.833vw]">Siamo alla ricerca di partner e agenti sia in Italia che all’estero. Scrivici per collaborare con noi.</p>
          <div class="flex items-end">
            <h3 class="text-blu">info@celyon.it</h3>
          </div>
        </div>
        <img src="/img/page/home/img-scopri.png" alt="" class="w-full h-[47.917vw]" />
      </div>
    </div>
  </section>

  <script>
    // Import GSAP and ScrollTrigger
    import gsap from "gsap";
    import ScrollTrigger from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    // GSAP Timeline for smoother animation
    const tl = gsap.timeline({ repeat: -1, repeatDelay: 1 });

    tl.to(".blue-circle", {
      y: "-5.417vw", // Move blue circle up
      scale: 1.1, // Slightly enlarge for effect
      duration: 1.2,
      ease: "power1.inOut"
    })
      .to(
        ".green-circle",
        {
          y: "5.417vw", // Move green circle down
          scale: 1.1, // Slightly enlarge for effect
          duration: 1.2,
          ease: "power1.inOut"
        },
        "<"
      ) // Start this animation at the same time as the previous one
      .to(".animazione-contatti-container", {
        rotation: 180,
        duration: 1.5,
        ease: "power2.inOut"
      })
      .to(".blue-circle", {
        y: "0", // Return blue circle to center
        scale: 1, // Return to original scale
        duration: 1.2,
        ease: "power1.inOut"
      })
      .to(
        ".green-circle",
        {
          y: "0", // Return green circle to center
          scale: 1, // Return to original scale
          duration: 1.2,
          ease: "power1.inOut"
        },
        "<"
      );
  </script>
</Layout>
